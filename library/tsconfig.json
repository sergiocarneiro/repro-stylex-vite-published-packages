{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "declarationDir": "build",
    "lib": ["esnext"],
    "target": "es2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true
  }
}
